<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearance Subtitle1 style -->
    <style name="TextAppearance.MapApp.Subtitle1"
        parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- TextView style -->
    <style name="Widget.MapApp.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>
    <!-- Radio Button style -->
    <style name="Widget.MapApp.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
    <!-- Divider style -->
    <style name="Widget.MapApp.Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>
</resources>